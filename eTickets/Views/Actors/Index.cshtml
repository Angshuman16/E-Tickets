@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-sm rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h2 class="mb-0">List of Actors</h2>
                </div>
                <div class="card-body p-3">
                    <table class="table table-hover align-middle text-center mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ProfilePicUrl)</th>
                                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.Bio)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="align-middle">
                                    <td>
                                        <img src="@Url.Content(item.ProfilePicUrl)" alt="@item.FullName" class="rounded-circle shadow-sm" style="max-width:100px; max-height:100px;" />
                                    </td>
                                    <td class="fw-semibold">@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td class="text-start">@Html.DisplayFor(modelItem => item.Bio)</td>
                                    <td>
                                        <a class="btn btn-outline-primary btn-sm me-1" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                        <a class="btn btn-outline-info btn-sm me-1" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Floating Add Button -->
    <div style="position:fixed; right:25px; bottom:25px;">
        <a asp-controller="Actors" asp-action="Create" class="btn btn-success btn-lg shadow-lg">
            <i class="bi bi-plus-circle"></i> Add New
        </a>
    </div>
</div>

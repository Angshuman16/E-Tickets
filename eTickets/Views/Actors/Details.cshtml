@model Actor


@{
    ViewData["Title"] = "Add a new actor";
}


<div class="row-text">

    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Actor</h1>
        </p>

        <div class="row">


            <div class="col-md-8 offset-2">
              
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width:150px" />
                    </div>

                    <div class="form-group">
                        <label asp-for="ProfilePicUrl" class="control-label"></label>
                        <input asp-for="ProfilePicUrl" class="form-control" readonly/>
                        <span asp-validation-for="ProfilePicUrl" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control"  readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>

                    </div>


                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>

                    </div>


                    <div class="form-group">
                        <a class=" btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id" >Update</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>

                    </div>

                


            </div>
        </div>
    </div>
</div>


@section Scripts {


    <script>

        $(document).ready(function () {
             $("#ProfilePicUrl").on("input", function () {
                 var output = document.getElementById('ProfilePicturePreview');
                 var url = $(this).val().trim();

                 if (url) {
                     output.src = url;
                 } else {
                     output.src = "";
                 }
             });
         });

    </script>
}

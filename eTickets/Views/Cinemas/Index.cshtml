@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-sm rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h2 class="mb-0">List of Cinemas</h2>
                </div>
                <div class="card-body p-3">
                    <table class="table table-hover align-middle text-center mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Logo)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="align-middle">
                                    <td>
                                        <img src="@Url.Content(item.Logo)" alt="@item.Name" class="rounded-circle shadow-sm" style="max-width:100px; max-height:100px;" />
                                    </td>
                                    <td class="fw-semibold">@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td class="text-start">@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>
                                        <a class="btn btn-outline-primary btn-sm me-1"><i class="bi bi-pencil-square"></i> Edit</a>
                                        <a class="btn btn-outline-info btn-sm me-1"><i class="bi bi-eye"></i> Details</a>
                                        <a class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Floating Add Button -->
    <div style="position:fixed; right:25px; bottom:80px;">
        <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success btn-lg shadow-lg">
            <i class="bi bi-plus-circle"></i> Add New
        </a>
    </div>
</div>

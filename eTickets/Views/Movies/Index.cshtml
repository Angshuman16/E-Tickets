@model IEnumerable<Movies>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 mb-4">
            <div class="card shadow-sm h-100 rounded-4 border-0">
                <div class="card-header text-white bg-info text-center rounded-top-4">
                    <h5 class="mb-0 fw-bold">@item.Cinema.Name</h5>
                </div>

                <div class="row g-0">
                    <div class="col-md-6">
                        <img src="@item.ImageUrl" class="img-fluid rounded-start" alt="@item.Name" style="object-fit: cover; height: 100%;">
                    </div>

                    <div class="col-md-6">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <p class="card-text text-truncate" style="max-height: 4.5rem;">@item.Description</p>
                                <p class="card-text mb-1"><b>Cinema:</b> @item.Cinema.Name</p>
                                <p class="card-text mb-1"><b>Category:</b> @item.MovieCategory</p>
                                <p class="card-text mb-1"><b>Start:</b> @item.StartDate.ToString("dd MMM yyyy")</p>
                                <p class="card-text mb-1"><b>End:</b> @item.EndDate.ToString("dd MMM yyyy")</p>
                                <p class="card-text mb-0">
                                    <b>Status: </b>
                                    @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                    {
                                        <span class="badge bg-success text-white">AVAILABLE</span>
                                    }
                                    else if (DateTime.Now > item.EndDate)
                                    {
                                        <span class="badge bg-danger text-white">EXPIRED</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary text-white">UPCOMING</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between bg-white border-top-0">
                    <a class="btn btn-outline-primary shadow-sm" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-eye-fill"></i> Show Details
                    </a>
                    <a class="btn btn-success text-white shadow-sm @((DateTime.Now > item.EndDate) ? "disabled" : "")"
                       asp-controller="Orders"
                       asp-action="AddItemToShoppingCart"
                       asp-route-id="@item.Id">
                        <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
                    </a>
                </div>
            </div>
        </div>
    }
</div>

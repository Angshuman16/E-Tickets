@model Producer


@{
    ViewData["Title"] = "Delete a Producer";
}


<div class="row-text">

    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation for the actor @Model.fullName</h1>
        </p>

        <div class="row">


            <div class="col-md-8 offset-2">
              
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width:150px" />
                    </div>

                    <div class="form-group">
                    <label asp-for="profilepicUrl" class="control-label"></label>
                    <input asp-for="profilepicUrl" class="form-control" readonly />
                      

                    </div>

                    <div class="form-group">
                    <label asp-for="fullName" class="control-label"></label>
                    <input asp-for="fullName" class="form-control" readonly />
                     

                    </div>


                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly />
                      

                    </div>


                    <div class="form-group">

                        <form  asp-action="Delete">

                            <input type = "hidden" asp-for="Id" />
                            <input type ="submit" value="Confirm" class="btn btn-danger float-right" />
                        </form>
                        
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>

                    </div>

                


            </div>
        </div>
    </div>
</div>


@section Scripts {


    <script>

        $(document).ready(function() {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $('#ProfilePicUrl').val(); 
        })

        $(document).ready(function () {
             $("#ProfilePicUrl").on("input", function () {
                 var output = document.getElementById('ProfilePicturePreview');
                 var url = $(this).val().trim();

                 if (url) {
                     output.src = url;
                 } else {
                     output.src = "";
                 }
             });
         });

    </script>
}

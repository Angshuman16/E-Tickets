<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTickets</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eTickets.styles.css" asp-append-version="true" />

    <style>
        /* Global Improvements */
        body {
            background-color: #f8f9fa; /* Soft light background */
        }

        /* Navbar enhancements */
        .navbar {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.5rem;
        }

        .nav-link {
            font-weight: 500;
        }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block; /* Show dropdown on hover for desktop */
        }

        /* Search bar improvements */
        .form-inline input {
            border-radius: 0.375rem 0 0 0.375rem;
        }

        .form-inline button {
            border-radius: 0 0.375rem 0.375rem 0;
        }

        /* Footer styling */
        footer {
            background-color: #ffffff;
            padding: 1rem 0;
            text-align: center;
            font-size: 0.9rem;
            box-shadow: 0 -0.125rem 0.25rem rgba(0, 0, 0, 0.05);
        }

        /* Main container */
        main {
            margin-top: 1rem;
            min-height: 80vh;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">eTickets</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Index">Movies</a>
                        </li>

                        <!-- Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i> Management
                            </a>
                            <ul class="dropdown-menu shadow-sm" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Cinemas" asp-action="Index">Cinemas</a></li>
                                <li><a class="dropdown-item" asp-controller="Producers" asp-action="Index">Producers</a></li>
                                <li><a class="dropdown-item" asp-controller="Actors" asp-action="Index">Actors</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- SearchBar -->
                    <form class="form-inline my-2 my-lg-0" asp-controller:"Movies" asp-action="Filter" style="padding-right:40px;">
                        <input name="searchString" type="text" class="form-control me-1" placeholder="Search for a movie..." aria-label="Search">
                        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - eTickets
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
